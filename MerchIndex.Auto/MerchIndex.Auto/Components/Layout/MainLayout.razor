@inherits LayoutComponentBase

<style>
    #btn-back-to-top {
        position: fixed;
        bottom: 20px;
        right: 20px;
        display: none;
    }
</style>
<div class="page" id="top">
    <_NavMenu />

    <_SearchNav />

    <main>
        <div class="container " style="margin-top:20px;margin-bottom:20px;">
            @Body
        </div>
    </main>

    <_Footer />

    <!-- Back to top button -->
    <button type="button"
            class="btn btn-warning btn-floating btn-lg"
            id="btn-back-to-top">
        <i class="fa fa-arrow-up"></i>
    </button>
</div>

